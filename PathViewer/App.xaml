<Application x:Class="PathViewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:path="clr-namespace:PathViewer"
             StartupUri="MainWindow.xaml"
             ThemeMode="System">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <path:ValueConverter x:Key="ValueConverter" />
            
            <DataTemplate DataType="{x:Type path:AddOrEditViewModel}">
                <path:AddOrEdit />
            </DataTemplate>
            <DataTemplate DataType="{x:Type path:ScaleOrMoveViewModel}">
                <path:ScaleOrMove />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
