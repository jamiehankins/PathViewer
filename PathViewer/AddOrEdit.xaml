<local:PopupBase x:Class="PathViewer.AddOrEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:PathViewer"
    mc:Ignorable="d"
    MinWidth="160"
    d:DataContext="{d:DesignInstance local:AddOrEditViewModel, IsDesignTimeCreatable=True}">
  <local:PopupBase.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Resources/ControlStyles.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <local:ValueConverter x:Key="ValueConverter" />
    </ResourceDictionary>
  </local:PopupBase.Resources>
  <Grid Margin="8">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <ComboBox Grid.ColumnSpan="2" ItemsSource="{Binding ItemTypes}"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Type"
                  SelectedItem="{Binding Type}"
                  HorizontalAlignment="Stretch"
                  Margin="4" />

    <Grid Grid.Row="1" Grid.ColumnSpan="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <TextBlock Style="{StaticResource label}" Text="{Binding ValueLabels[0]}"
                 Visibility="{Binding ValueLabels[0], Converter={StaticResource ValueConverter}}" />
      <TextBox Grid.Column="1" Style="{StaticResource textField}"
               PreviewTextInput="OnNumericInput"
               Text="{Binding Values[0].Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               Visibility="{Binding ValueLabels[0], Converter={StaticResource ValueConverter}}" />
      <TextBlock Grid.Row="1" Style="{StaticResource label}" Text="{Binding ValueLabels[1]}"
                 Visibility="{Binding ValueLabels[1], Converter={StaticResource ValueConverter}}" />
      <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource textField}"
               PreviewTextInput="OnNumericInput"
               Text="{Binding Values[1].Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               Visibility="{Binding ValueLabels[1], Converter={StaticResource ValueConverter}}" />
      <TextBlock Grid.Row="2" Style="{StaticResource label}" Text="{Binding ValueLabels[2]}"
                 Visibility="{Binding ValueLabels[2], Converter={StaticResource ValueConverter}}" />
      <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource textField}"
               PreviewTextInput="OnNumericInput"
               Text="{Binding Values[2].Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               Visibility="{Binding ValueLabels[2], Converter={StaticResource ValueConverter}}" />
      <TextBlock Grid.Row="3" Style="{StaticResource label}" Text="{Binding FlagLabels[0]}"
                 Visibility="{Binding FlagLabels[0], Converter={StaticResource ValueConverter}}" />
      <CheckBox Grid.Row="3" Grid.Column="1" IsChecked="{Binding Flags[0].Value}" VerticalAlignment="Center" Margin="4"
                Visibility="{Binding FlagLabels[0], Converter={StaticResource ValueConverter}}" />
      <TextBlock Grid.Row="4" Style="{StaticResource label}" Text="{Binding FlagLabels[1]}"
                 Visibility="{Binding FlagLabels[1], Converter={StaticResource ValueConverter}}" />
      <CheckBox Grid.Row="4" Grid.Column="1" IsChecked="{Binding Flags[1].Value}" VerticalAlignment="Center" Margin="4"
                Visibility="{Binding FlagLabels[1], Converter={StaticResource ValueConverter}}" />
      <TextBlock Grid.Row="5" Style="{StaticResource label}" Text="{Binding FlagLabels[2]}"
                 Visibility="{Binding FlagLabels[2], Converter={StaticResource ValueConverter}}" />
      <CheckBox Grid.Row="5" Grid.Column="1" IsChecked="{Binding Flags[2].Value}" VerticalAlignment="Center" Margin="4"
                Visibility="{Binding FlagLabels[2], Converter={StaticResource ValueConverter}}" />
      <TextBlock Grid.Row="6" Style="{StaticResource label}" Text="{Binding ValueLabels[3]}"
                 Visibility="{Binding ValueLabels[3], Converter={StaticResource ValueConverter}}" />
      <TextBox Grid.Row="6" Grid.Column="1" Style="{StaticResource textField}"
               PreviewTextInput="OnNumericInput"
               Text="{Binding Values[3].Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               Visibility="{Binding ValueLabels[3], Converter={StaticResource ValueConverter}}" />
      <TextBlock Grid.Row="7" Style="{StaticResource label}" Text="{Binding ValueLabels[4]}"
                 Visibility="{Binding ValueLabels[4], Converter={StaticResource ValueConverter}}" />
      <TextBox Grid.Row="7" Grid.Column="1" Style="{StaticResource textField}"
               PreviewTextInput="OnNumericInput"
               Text="{Binding Values[4].Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               Visibility="{Binding ValueLabels[4], Converter={StaticResource ValueConverter}}" />
      <TextBlock Grid.Row="8" Style="{StaticResource label}" Text="{Binding ValueLabels[5]}"
                 Visibility="{Binding ValueLabels[5], Converter={StaticResource ValueConverter}}" />
      <TextBox Grid.Row="8" Grid.Column="1" Style="{StaticResource textField}"
               PreviewTextInput="OnNumericInput"
               Text="{Binding Values[5].Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               Visibility="{Binding ValueLabels[5], Converter={StaticResource ValueConverter}}" />
    </Grid>

    <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,4">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <TextBlock Style="{StaticResource label}" Text="Result" />
      <TextBlock Grid.Column="1" Text="{Binding Result, Mode=OneWay}"
                 VerticalAlignment="Center" Margin="4"
                 Opacity="0.7" />
    </Grid>

    <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="Cancel" IsCancel="True" Margin="4" MinWidth="75" />
      <Button Content="OK" IsDefault="True" Command="{Binding OkCommand}" Margin="4" MinWidth="75" />
    </StackPanel>
  </Grid>
</local:PopupBase>
