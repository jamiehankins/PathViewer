<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Label style - inherits from Fluent TextBlock style -->
    <Style x:Key="label" TargetType="TextBlock" BasedOn="{StaticResource CaptionTextBlockStyle}">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Width" Value="80" />
        <Setter Property="TextAlignment" Value="Right" />
    </Style>

    <!-- Text field style - inherits from Fluent TextBox style -->
    <Style x:Key="textField" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Width" Value="80" />
    </Style>

    <!-- Base icon button style for toolbar buttons with Segoe MDL2 Assets icons -->
    <Style x:Key="iconButtonBase" TargetType="ButtonBase" BasedOn="{StaticResource {x:Type ButtonBase}}">
        <Setter Property="Padding" Value="4" />
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}" 
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ButtonBase}}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Icon button style -->
    <Style x:Key="iconButton" TargetType="Button" BasedOn="{StaticResource iconButtonBase}">
        <Setter Property="Width" Value="Auto" />
        <Setter Property="Height" Value="Auto" />
    </Style>

    <!-- Icon toggle button style -->
    <Style x:Key="iconToggle" TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}" 
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}" />
                <Setter Property="Foreground" Value="White" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Toolbar CheckBox style with visual checked state -->
    <Style x:Key="toolbarCheckBox" TargetType="CheckBox">
        <Style.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Margin" Value="2" />
                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Base ComboBox style with ItemTemplate to ensure theme colors work in popup -->
    <Style x:Key="baseComboBox" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}" VerticalAlignment="Center" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Color ComboBox style with color preview template -->
   
    <Style x:Key="colorComboBox" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Fill="{Binding}" Stroke="{DynamicResource ControlElevationBorderBrush}" 
                                   Width="16" Height="16" Margin="0 2 4 2" />
                        <TextBlock Text="{Binding}" VerticalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"    />
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
